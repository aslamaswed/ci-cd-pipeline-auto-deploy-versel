pipeline {
  agent any

  environment {
    VERSEL_TOKEN = credentials('versel_token')
  }

  stages {
    stage('Install') {
      steps {
        bat 'npm install'
      }
    }
    stage('Test') {
      steps {
        echo 'skiping tests... no test script found'
      }
    }
    stage('Build') {
      steps {
        bat 'npm run build'
      }
    }
    stage('Deploy') {
      steps {
        bat 'npx vercel --prod --yes --token=%VERSEL_TOKEN%'
      }
    }
  }
